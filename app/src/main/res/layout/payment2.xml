<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/htab_maincontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"

    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="5dp"
    android:layoutDirection="rtl"

    >

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nes"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="fill_vertical"
        android:clipToPadding="false"
        android:isScrollContainer="false"

        android:scrollbarSize="3dip"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout5"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:weightSum="4"



                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.4"
                    android:padding="5dp"

                    android:scaleType="fitCenter"
                    android:src="@drawable/huoilll" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:layout_weight="6"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/mar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:padding="2dp"
                        android:text="@string/app_name"
                        android:gravity="center"
                        android:textColor="@color/primaryTextColor2"
                        android:textSize="18sp"
                        android:textStyle="italic" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="14dp"
                        android:layout_toRightOf="@id/mar"
                        android:background="@color/primaryTextColor">

                    </View>


                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"



                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="14dp"
                        android:layout_toLeftOf="@id/mar"
                        android:background="@color/primaryTextColor">

                    </View>


                </RelativeLayout>




            </LinearLayout>










            <android.support.v7.widget.CardView
                android:id="@+id/cardCompanyActivity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/phonenumbercv"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/CardColor">

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/linearLayout5"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="5dp"

                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView559"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"

                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="@string/locationdetermint"

                        android:textColor="@color/primaryDarkColor"
                        android:textSize="15sp" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/locationCard"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/primaryTextColor"
                        app:cardCornerRadius="2dp">


                        <ImageView
                            android:id="@+id/imagelocation"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:layout_gravity="center"
                            android:layout_weight="0.4"
                            android:padding="5dp"

                            android:scaleType="center"
                            app:srcCompat="@drawable/ic_pin" />

                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardcompanyName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/CardColor">

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/linearLayout5"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="5dp"

                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/EditRecipientName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:inputType="text"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:hint="@string/Recipientname"
                        android:paddingRight="5dp"
                        android:textColor="@color/primaryDarkColor" />


                    <TextView
                        android:id="@+id/userNameCV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"

                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="@string/Recipientname"

                        android:textColor="@color/primaryDarkColor"
                        android:textSize="15sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardcompanyName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/CardColor">

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/linearLayout5"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="5dp"

                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/EditRecipientNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_weight="2"
                        android:inputType="number"
                        android:background="@android:color/transparent"
                        android:hint="@string/Recipientnumber"
                        android:paddingRight="5dp"
                        android:textColor="@color/primaryDarkColor" />



                    <TextView
                        android:id="@+id/userNameCV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"

                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="@string/Recipientnumber"

                        android:textColor="@color/primaryDarkColor"
                        android:textSize="15sp" />


                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/CardColor">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"

                    android:gravity="center_vertical"
                    android:padding="10dp"

                    android:text="@string/notessn"
                    android:textColor="@color/primaryDarkColor"
                    android:textSize="15sp" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/CardColor">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"

                    android:gravity="center_vertical"
                    android:padding="10dp"

                    android:text="@string/notecancelorder"
                    android:textColor="@color/primaryDarkColor"
                    android:textSize="15sp" />

            </android.support.v7.widget.CardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_marginTop="5dp"
                android:layout_weight="0.3">

                <android.support.v7.widget.CardView
                    android:id="@+id/paycard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:cardBackgroundColor="@color/CardColor">

                    <TextView
                        android:id="@+id/pay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="6dp"

                        android:text="@string/Payment"
                        android:textColor="@color/primaryDarkColor" />


                </android.support.v7.widget.CardView>


            </RelativeLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>